<div class="ocean">
  <div class="bottles">
    <% @ideas.each do |idea| %>
      <% if idea.share && idea.user_id != current_user.id %>
        <div class="idea-image">
          <img src="/assets/float_bottle.png" class="bottle" alt="bottle">
            <div class="idea-info">
            <h3 class="idea-name">
            <%= link_to "#{idea.name}", idea_path(idea.id), class:"link", class:"idea-name" %>
            <p class="idea-name"><%= idea.user.nickname %></p>
            </h3>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="pagenation"><%= paginate @ideas %>
  </div>
</div>

  
<div class="parent">
  <div class="child">
    <div class="next">
    </div>
  </div>
</div>